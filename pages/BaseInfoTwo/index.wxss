/* 背景 */
page {
    background-color: #F7F8FA;
}

/* 头部样式 */
.top {
    padding: 0 32rpx;
    /* height: 386rpx; */
    background-color: #fff;
}

.top_item {
    height: 160rpx;
    border-bottom: 1px solid #ebedf0;
}

.top_item>input {
    margin-top: 16rpx;
}

.top_title {
    padding-top: 32rpx;
    color: #323233;
    font-size: 26rpx;
    font-weight: 700;
}

.top_input {
    color: #C8C9CC;
    font-size: 28rpx;
    /* margin-top: 16rpx; */
}

.choose_school {

    display: flex;
    justify-content: space-between;
    margin-top: 16rpx;
    /* align-items: center; */
}

.nation_text {
    color: #C8C9CC;
    font-size: 28rpx;
}

.arrow {
    width: 32rpx;
    height: 32rpx;
}

.top_option {
    margin-top: 16rpx;
}
.radio_size{
    transform:scale(0.8);
}


/* 中间内容样式 */
.content{
    padding: 0 32rpx;
    /* height: 386rpx; */
    background-color: #fff;
}
.content_list{
    margin-top: 20rpx;
}
.content_item{
    height: 160rpx;
    border-bottom: 1px solid #ebedf0;
}
.content_item>input{
    margin-top: 16rpx;
}

.content_title{
  padding-top: 32rpx;
  color: #323233;
  font-size: 26rpx;
  font-weight: 700;
}
.content_input{
    color: #C8C9CC;
    font-size: 28rpx;
   /* margin-top: 16rpx; */
}
/* 底部内容样式 */
.down{
    padding: 0 32rpx;
    /* height: 386rpx; */
    background-color: #fff;
}
.down_list{
    margin-top: 20rpx;
}
.down_item{
    border-bottom: 1px solid #ebedf0;
}
.choose{
    display: flex;
    margin-top: 16rpx;
    margin-bottom: 32rpx;
    align-items: center;
}

.choose_value{
    color: #323233;
    font-size: 28rpx;
}

/* 底部按钮样式 */
.down_wrap{
    margin: 32rpx auto;
    height: 120rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #fff;

}
/* 上一项按钮样式 */
.next_btn{
    width: 182rpx;
    height: 88rpx;
    background-color: #F2F3F5;
    border-radius: 28rpx;
    text-align: center;
    line-height: 88rpx;
    margin-right: 30rpx;
    color: #323233;
    font-size: 32rpx;
}
/* 提交按钮样式 */
.submit{
    width: 474rpx;
    height: 88rpx;
    background-color: #186AE6;
    border-radius: 28rpx;
    text-align: center;
    line-height: 88rpx;
    color: #fff;
    font-size: 32rpx;
}
