page {
    background-color: #F7F8FA;
}

/* 头部样式 */
.top {
    padding: 0 32rpx;
    /* height: 386rpx; */
    background-color: #fff;
}

.top_item {
    height: 160rpx;
    border-bottom: 1px solid #ebedf0;
}

.top_item>input {
    margin-top: 16rpx;
}

.top_title {
    padding-top: 32rpx;
    color: #323233;
    font-size: 26rpx;
    font-weight: 700;
}

.top_input {
    color: #C8C9CC;
    font-size: 28rpx;
    /* margin-top: 16rpx; */
}

.choose_school {
    display: flex;
    justify-content: space-between;
    margin-top: 16rpx;
    /* align-items: center; */
}

.nation_text {
    color: #C8C9CC;
    font-size: 28rpx;
}

.arrow {
    width: 32rpx;
    height: 32rpx;
}

.top_option {
    margin-top: 16rpx;
}
.radio_size{
    transform:scale(0.8);
}

/* 中间样式 */
.content{
    padding: 0 32rpx;
    /* height: 386rpx; */
    background-color: #fff;
}
.content_list{
    margin-top: 20rpx;
}
.content_item{
    height: 160rpx;
    border-bottom: 1px solid #ebedf0;
}
.content_item>input{
    margin-top: 16rpx;
}

.content_title{
  padding-top: 32rpx;
  color: #323233;
  font-size: 26rpx;
  font-weight: 700;
}
.content_input{
    color: #C8C9CC;
    font-size: 28rpx;
   /* margin-top: 16rpx; */
}

.city_text {
    color: #C8C9CC;
    font-size: 28rpx;
  }
/* 底部按钮样式 */
.bottom{
    display: flex;
    align-items: center;
    height: 120rpx;
   margin: 32rpx 0;
    background-color: #fff;
}
.btn{
    width: 686rpx;
   margin: 0 auto;
    height: 88rpx;
    background-color: #186AE6;
    color: #FFFFFF;
    text-align: center;
    line-height: 88rpx;
    border-radius: 28rpx;
    font-size: 32rpx;
}

